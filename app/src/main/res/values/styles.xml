<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTelappyBlue</item>
        <item name="colorPrimaryDark">@color/colorTelappyBlue</item>
        <item name="colorAccent">@color/colorTelappyBlue</item>
    </style>

    <style name="EditTextNormalStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColorHint">@color/colorTelappyBlue</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SubHeaderBoldStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderSmallStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderNormalStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewSmallStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewSmallStyleWhite">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewNormalStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewNormalStyleWhite">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewLargeStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewLargeStyleWhite">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewXLargeStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewXLargeStyleWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewXXLargeStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewXXLargeStyleWhite">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>


    <style name="GreenButtonStyle" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="background">@color/colorTelappyBlue</item>
    </style>



    <style name="AddPaymentSetting" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorTelappyBlue</item>
        <item name="background">@color/colorTelappyBlue</item>
    </style>

    <style name="FullScreenVideoTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
